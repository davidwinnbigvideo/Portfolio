@model Message

<h2>Message Details</h2>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">From: @Model.Name</h5>
        <h6 class="card-subtitle mb-2 text-muted">@Model.Email</h6>
        <p class="card-text">@Model.Content</p>
        <p class="text-muted">Received: @Model.CreatedAt.ToString("g")</p>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    <form asp-action="Delete" asp-route-id="@Model.Id" method="post" style="display: inline;">
        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure?')">Delete</button>
    </form>
</div>